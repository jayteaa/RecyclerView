<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginBottom="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:id="@+id/ItemSpielstand">

        <TextView
            android:id="@+id/Spielminute"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:gravity="center"
            android:text="3.Min"
            android:textSize="6pt" />





        <TextView
            android:id="@+id/Torschütze"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@id/Spielminute"
            android:textSize="6pt"
            android:gravity="center"
            android:text="Torschütze Modeste"/>


        <TextView
            android:id="@+id/SpielstandUpdate"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/Torschütze"
            android:paddingLeft="5dp"
            android:textSize="6pt"
            android:gravity="center"
            android:text="1:="/>



    </RelativeLayout>
        
</androidx.cardview.widget.CardView>